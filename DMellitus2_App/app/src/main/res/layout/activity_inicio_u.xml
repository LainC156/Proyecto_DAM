<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.randallflagg.dmellitus2_app.inicio_u">

    <RelativeLayout
        android:layout_width="400dp"
        android:layout_height="592dp"
        android:background="@android:color/holo_blue_light"
        tools:layout_editor_absoluteX="10dp"
        tools:layout_editor_absoluteY="2dp">

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="72dp"
            android:text="¡Bienvenido!"
            android:textSize="36sp" />

        <Button
            android:id="@+id/btn_nvamed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView10"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="105dp"
            android:onClick="btn_medicion"
            android:text="Nueva Medición" />

        <Button
            android:id="@+id/btn_grafica"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_nvamed"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="77dp"
            android:onClick="btn_graficado"
            android:text="Graficado" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
